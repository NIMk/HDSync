# wait the boot to complete
sleep 15

APPROOT=/apps/hdsync

USBROOT=`mount | awk '/.tmp.mnt/ { print $3}'`

# if there is a custom osd, we have to wait longer
ls $USBROOT/ | grep 'osd.bin$'
if [ $? = 0 ]; then
    sleep 15
fi

if ! [ -r $USBROOT/hdsync.conf ]; then
    echo "config file not found" > /tmp/hdsync.log
    echo "place hdsync.conf in your usb key" >> /tmp/hdsync.log
    exit 0
else
# source settings
    . $USBROOT/hdsync.conf
    echo "config file found in $USBROOT/hdsync.conf" > $SYNC_LOG
    echo "sync role configured to: $SYNC_ROLE" >> $SYNC_LOG
fi

export APPROOT
export SYNC_LOG
export OFFER_SLEEP
export ETH_IFACE
export HDSYNC_CHANNEL
export TOTAL_CHANNELS

# load up utils
. /apps/hdsync/bin/utils-sync.sh

if ! [ -z "x$VIDEO_OUT" ]; then
    switch_output $VIDEO_OUT
fi

if [ "$HDSYNC_CHANNEL" = "1" ]; then
    $APPROOT/bin/offer-sync.sh >> $SYNC_LOG
else
    $APPROOT/bin/listen-sync.sh >> $SYNC_LOG
fi
